public class Stopwatch { 

    private final long start;

   /**
     * 创建一个计时器
     */
    public Stopwatch() {
        start = System.currentTimeMillis();
    } 


   /**
     * 返回对象创建以来所经过的时间
     */
    public double elapsedTime() {
        long now = System.currentTimeMillis();
        return (now - start) / 1000.0;
    }

} 
